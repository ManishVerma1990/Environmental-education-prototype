<% layout('layout') -%>
<h3>Create Quiz</h3>
<form action="/quizzes/create" method="post">
<div class="row g-3">
<div class="col-md-6">
<label class="form-label">Title</label>
<input name="title" class="form-control" required />
</div>
<div class="col-md-3">
<label class="form-label">Lesson ID (optional)</label>
<input name="lesson_id" type="number" class="form-control" />
</div>
<div class="col-md-3">
<label class="form-label">Is Checkpoint?</label>
<select name="is_checkpoint" class="form-select">
<option value="0" selected>No</option>
<option value="1">Yes</option>
</select>
</div>
<div class="col-md-3">
<label class="form-label">Position (if embedded)</label>
<input name="position" type="number" class="form-control" />
</div>
<div class="col-12">
<label class="form-label">Questions JSON</label>
<textarea name="questions" class="form-control" rows="8" placeholder='[{"q":"What is 2+2?","options":["2","4"],"answer":1}]'></textarea>
</div>
</div>
<button class="btn btn-success mt-3">Save Quiz</button>
</form>